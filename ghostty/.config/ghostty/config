# Nicol√°s de Rivas' Ghostty config

# General config
font-family = JetBrainsMono Nerd Font Mono
font-size = 14
theme = catppuccin-mocha
confirm-close-surface = false

# Keybindings
#   Clear all keybinds
keybind = clear

#   Defaults I actually use
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+c=copy_to_clipboard

#   Navigate splits
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:down
keybind = ctrl+k=goto_split:up
keybind = ctrl+l=goto_split:right

#   Create split
keybind = ctrl+c=new_split:down
keybind = ctrl+v=new_split:right

#   Close split
keybind = ctrl+x=close_surface

#   Toggle fullscreen
keybind = ctrl+f=toggle_split_zoom

#   New tab
keybind = ctrl+shift+t=new_tab

#   Navigate tabs
keybind = ctrl+shift+1=goto_tab:1
keybind = ctrl+shift+2=goto_tab:2
keybind = ctrl+shift+3=goto_tab:3
keybind = ctrl+shift+4=goto_tab:4
keybind = ctrl+shift+5=goto_tab:5
keybind = ctrl+shift+6=goto_tab:6
keybind = ctrl+shift+7=goto_tab:7
keybind = ctrl+shift+8=goto_tab:8
keybind = ctrl+shift+9=goto_tab:9
keybind = ctrl+shift+h=next_tab
keybind = ctrl+shift+l=previous_tab

#   Close tab
keybind = ctrl+shift+w=close_tab
